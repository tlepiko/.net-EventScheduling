@page
@model RIK_Prooviülesanne__Taavi_Lepiko.Pages.Participants.AddParticipantsModel
@{
}

<br />
<h2>Lisa Osalejaid</h2>

<!--Tagastab vormi vigase täitmise puhul veateate.-->
@if (Model.errorMessage.Length > 0)
{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>@Model.errorMessage</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
}
 <!--Ürituse andmed on salvestatud mudellise, et neid kuvada osalejavormi kohal.-->
<div class="col-12 bg-white">
	<p>@Model.eventInfo.ENAME</p>
	<p>@Model.eventInfo.ETIME</p>
	<p>@Model.eventInfo.ELOCATION</p>
</div>

<!--
	Vormid era- ja ärikliendi osalejaks määramiseks. Raadio nuppudega saab valida kas era- või ärikliendi vormi vahel. 
	Väärtused vormist liiguvad läbi funktsiooni Addparticipants.cshtml.cs'i.'
-->

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
$(document).ready(function(){
	$('input[type="radio"]').click(function(){
		var inputValue = $(this).attr("value");
		var targetBox = $("." + inputValue);
		$(".box").not(targetBox).hide();
		$(targetBox).show();
		$(targetBox).val = 1;
	});
});
</script>
<body>
	<div class="col-12 bg-white">
		<div class="justify-content-center">
	<div class="col-2 bg-white">
		<label><input type="radio" name="radiobutton" value="private">Eraisik</label>
		<label><input type="radio" name="radiobutton" value="commercial">Ettevõte</label>
	</div>
	<div class="private box" name="checkType">
		<form method="POST">
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Nimi</label>
				<div class="col-sm-6">
					<input type="text" class="form-control" name="participantName" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Isukukood</label>
				<div class="col-sm-6">
					<input type="number" class="form-control" name="participantCode" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Makseviis</label>
				<div class="col-sm-6">
					<input type="text" class="form-control" name="participantPayment" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Lisainfo</label>
				<div class="col-sm-6">
					<input type="text" maxlength="1500" class="form-control" name="participantExtraInfo" value="" />
				</div>
			</div>

					@if (Model.successMessage.Length > 0)
					{
						<div class="row mb-3">
							<div class="col-sm-9">
								<div class="alert alert-success alert-dismissible fade show" role="alert">
									<strong>@Model.successMessage</strong>
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							</div>
						</div>
					}

			<div class="row mb-3">
				<div class="offset-sm-3 col-sm-3 d-grid">
					<button type="submit" class="btn btn-primary">Lisa osaleja</button>
				</div>
				<div class="col-sm-3 d-grid">
					<a class="btn btn-secondary" href="/" role="button">Tagasi</a>
				</div>
			</div>
		</form>
	</div>
	<div class="commercial box" style="display:none">
		<form method="POST">
			<input type="hidden" name="checkType" value="0" />
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Ettevõtte nimi:</label>
				<div class="col-sm-6">
					<input type="text" class="form-control" name="participantName" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Registrikood:</label>
				<div class="col-sm-6">
					<input type="number" class="form-control" name="participantCode" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Makseviis</label>
				<div class="col-sm-6">
					<input type="text" class="form-control" name="participantPayment" value="" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-3 col-form-label">Lisainfo</label>
				<div class="col-sm-6">
					<input type="text" maxlength="5000" class="form-control" name="participantInfo" value="" />
				</div>
			</div>
					@if (Model.successMessage.Length > 0)
					{
						<div class="row mb-3">
							<div class="col-sm-9">
								<div class="alert alert-success alert-dismissible fade show" role="alert">
									<strong>@Model.successMessage</strong>
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							</div>
						</div>
					}

			<div class="row mb-3">
				<div class="offset-sm-3 col-sm-3 d-grid">
					<button type="submit" class="btn btn-primary">Lisa osaleja</button>
				</div>
				<div class="col-sm-3 d-grid">
					<a class="btn btn-secondary" href="/" role="button">Tagasi</a>
				</div>
			</div>
		</form>
	</div>
	</div>
	</div>
	</body>