@page
@model RIK_Prooviülesanne__Taavi_Lepiko.Pages.Participants.ViewParticipantsModel
@{
}

<br />
<h2>Osalejate nimekiri</h2>

@if (Model.errorMessage.Length > 0)
{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>@Model.errorMessage</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
}

<div classclass="bg-white">
<div class="bg-white">
	<p>@Model.eventInfo.ENAME</p>
	<p>@Model.eventInfo.ETIME</p>
	<p>@Model.eventInfo.ELOCATION</p>
</div>

<div class="bg-white">
<table class="table bg-white">
	<thead>
			<tr class="fs-3 bg-white">Osavõtjad</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listParticipants)
		{
				<tr>
					<td>@item.PNAME</td>
					<td>@item.PCODE</td>
					@if (DateTime.Parse(Model.eventInfo.ETIME) > DateTime.Now)
					{
						<td>
							<a class="btn btn-danger btn-sm" href="/Participants/RemoveParticipants?id=@item.PID&eid=@Model.eventInfo.EID">Kustuta</a>
						</td>
					}
				</tr>
		}
	</tbody>
</table>
</div>


	<div class="row mb-3">
		<div class="col-sm-3 d-grid">
			<a class="btn btn-secondary" href="/" role="button">Tagasi</a>
		</div>
	</div>
	</div>